<html>
    <head>
        <title>Mini Messaging App</title>
        <link rel="stylesheet" href="/styles.css"/>
    </head>
    <body>
        <h1><%= title %></h1>

        <% messages.forEach(message => { %>
            <div class="messages">
                <h3><%= message.user %></h3>
                <p><%= message.text %></p>
                <p><%= message.added %></p>
                <button><a href="<%= message.id %>">view</a></button>
            </div>
        <% }); %>
        <button><a href="<%= href %>">New Message</a></button>
    </body>
</html>